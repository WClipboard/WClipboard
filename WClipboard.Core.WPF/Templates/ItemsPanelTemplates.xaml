<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ItemsPanelTemplate x:Key="ItemsWrapPanel">
        <WrapPanel KeyboardNavigation.DirectionalNavigation="Contained" />
    </ItemsPanelTemplate>

    <ItemsPanelTemplate x:Key="ItemsStackPanelHorizontal">
        <StackPanel Orientation="Horizontal" KeyboardNavigation.DirectionalNavigation="Contained" />
    </ItemsPanelTemplate>

    <ItemsPanelTemplate x:Key="ItemsStackPanelVertical">
        <StackPanel Orientation="Vertical" KeyboardNavigation.DirectionalNavigation="Contained" />
    </ItemsPanelTemplate>
</ResourceDictionary>