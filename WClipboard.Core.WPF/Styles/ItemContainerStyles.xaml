<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:t="clr-namespace:WClipboard.Core.WPF.Themes"
                    xmlns:e="clr-namespace:WClipboard.Core.WPF.Extensions">
    <Style x:Key="QuoteItemContainerStyle" BasedOn="{StaticResource {x:Type ContentControl}}" TargetType="{x:Type ContentControl}">
        <Setter Property="BorderBrush" Value="{t:FromPalette GrayB}" />
        <Setter Property="BorderThickness" Value="10,1,1,1" />
        <Setter Property="Margin" Value="0,5,0,0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>